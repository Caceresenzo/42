<script type="text/template" id="template-channel-transfer-ownership">
	<h3>
		transfer ownership?
		<small><%%e channel.name || channel.id %></small>
		<br />
		to
		<small>
			<select id="user-select" class="form-control" style="display: unset !important; width: fit-content !important;">
				<option value="" selected disabled hidden>&lt;target&gt;</option>
				<%% _.each(channel.members, function(member) { %>
					<%% if (channel.owner.id != member.user.id) { %>
						<option value="<%%e member.user.id %>"><%%e member.user.username %></option>
					<%% } %>
				<%% }) %>
			</select>
		</small>
	</h3>
	<div id="error-container"></div>
</script>

