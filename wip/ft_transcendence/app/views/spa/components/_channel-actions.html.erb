<script type="text/template" id="template-channel-mute">
	<h3>
		mute?
		<small><%%e id %></small>
		<br />
		target
		<small><%%e userId %></small>
		<br />
		duration
		<small>
			<select>
				<option value="0" selected>indefinitely</option>
				<option value="60">1 minute</option>
				<option value="300">5 minutes</option>
				<option value="600">10 minutes</option>
				<option value="3600">1 hour</option>
				<option value="21600">6 hours</option>
				<option value="86400">1 day</option>
				<option value="259200">3 days</option>
			</select>
		</small>
	</h3>
	<div class="dropdown-divider"></div>
	<div class="container text-center">
		<a href="javascript:void(0)">[yes]</a>
		<a href="javascript:history.length ? history.back() : window.location.hash = '#channel/<%%e id %>'">[no]</a>
	</div>
</script>

