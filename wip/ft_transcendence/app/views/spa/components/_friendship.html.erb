  </div>
</script>

<script type="text/template" id="template-friendship-friend">
  <div href="/#user/<%%e friendship.friend.id %>" class="list-group-item list-group-item-action">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">
        <a href="/#user/<%%e friendship.friend.id %>" ><%%e friendship.friend.username %></a>
      </h5>
      <a href="#friendship/delete/<%%e friendship.friend.id %>">[delete]</a>
